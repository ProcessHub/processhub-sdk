  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true
  },
   "include": [
    "./src/**/*"
  ],
  "exclude": [ 
    "lib",
    "node_modules"
  ]
}